<!DOCTYPE html>

<html>
  <head>
    <title>Twig Template</title>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="css/styles.css" media="screen" charset="utf-8">
  </head>
  <body ng-app="silexApp">
    <div ng-controller="silexCtrl">
      <div class="container page-header">
        <h1>Super Silex RESTful To Do List</h1>
      </div>

      <div class="container">
        <div class="row">
          <div class="col-sm-6">
            <h2>Tasks</h2>

            <div class="" ng-repeat="item in notdone = (tasks | filter:{complete:false})">
              <p>
                <button ng-click="completeTask(item)" class="btn btn-default"><span class="glyphicon glyphicon-ok text-success"></span></button>
                <button ng-click="deleteTask(item)" class="btn btn-default"><span class="glyphicon glyphicon-remove text-danger"></span></button>
                <strong>ID:</strong> {[{item.id}]} <strong>Desc:</strong> {[{item.task}]}
              </p>
            </div>

            <div class="row" ng-show="done.length">
              <div class="col-xs-12">
                <h2>Completed <button ng-click="deleteAllComplete(done)" class="btn btn-danger" title="Clear completed"><span class="glyphicon glyphicon-remove"></span></button></h2>
              </div>
            </div>
            <div class="" ng-repeat="item in done = (tasks | filter:{complete:true})">
              <p>
                <button ng-click="removeCompleteTask(item)" class="btn btn-default"><span class="glyphicon glyphicon-arrow-up"></span></button>
                <span class="complete">{[{item.task}]}</span>
              </p>
            </div>

            <p>
              <form class="form-inline" ng-submit="addTask(addtask)">
                <div class="input-group">
                  <input type="text" class="form-control" ng-model="addtask">
                  <span class="input-group-btn">
                    <button type="submit" class="btn btn-success">Add Task</button>
                  </span>
                </div>
              </form>
            </p>

          </div>
          <div class="col-xs-6">
            <h2>Silex REST commands</h2>
            <p><strong>Status:</strong> {[{word}]}</p>

            <p>
              <button ng-click="getTasks()" class="btn btn-default">Get All Tasks</button>
            </p>

            <p>
              <form class="form-inline" ng-submit="getTask(task)">
                <div class="input-group">
                  <input type="text" class="form-control" ng-model="task" placeholder="Ex. 104">
                  <span class="input-group-btn">
                    <button type="submit" class="btn btn-default">Get Single Task</button>
                  </span>
                </div>
              </form>
            </p>
            <p>
              <strong>Response:</strong> {[{response}]}
            </p>
          </div>
        </div>
      </div>
    </div>

    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.15/angular.min.js"></script>
    <script src="js/controller.js"></script>
  </body>
</html>
